@model TicketBus.Models.ViewModels.EditScheduleViewModel

@{
    ViewData["Title"] = "Sửa lịch trình";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Sửa lịch trình</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" asp-area="Admin">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="SchedulePrice" asp-action="Index" asp-area="Admin">Quản lý giá vé</a></li>
        <li class="breadcrumb-item active">Sửa lịch trình</li>
    </ol>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-edit me-1"></i>
            Sửa lịch trình
        </div>
        <div class="card-body">
            <form asp-action="EditSchedule" method="post">
                <input type="hidden" asp-for="IdSchedule" />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="IdRoute" class="form-label">Tuyến đường</label>
                    <select asp-for="IdRoute" class="form-select" asp-items="ViewBag.BusRoutes">
                        <option value="">-- Chọn tuyến đường --</option>
                    </select>
                    <span asp-validation-for="IdRoute" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IdCoach" class="form-label">Xe</label>
                    <select asp-for="IdCoach" class="form-select" asp-items="ViewBag.Coaches">
                        <option value="">-- Chọn xe --</option>
                    </select>
                    <span asp-validation-for="IdCoach" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DepartTime" class="form-label">Thời gian khởi hành</label>
                    <input asp-for="DepartTime" class="form-control" type="time" />
                    <span asp-validation-for="DepartTime" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ArriveTime" class="form-label">Thời gian đến</label>
                    <input asp-for="ArriveTime" class="form-control" type="time" />
                    <span asp-validation-for="ArriveTime" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}