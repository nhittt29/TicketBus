@model TicketBus.Models.ViewModels.EditUserRolesViewModel

@{
    ViewData["Title"] = "Chỉnh sửa vai trò";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Chỉnh sửa vai trò</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="AdminPanel" asp-area="Admin">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-controller="UserManagement" asp-action="Index" asp-area="Admin">Quản lý người dùng</a></li>
        <li class="breadcrumb-item active">Chỉnh sửa vai trò</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user-shield me-1"></i>
            Chỉnh sửa vai trò cho @Model.Email
        </div>
        <div class="card-body">
            <form asp-action="EditRoles" method="post">
                <input type="hidden" asp-for="UserId" />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input class="form-control" value="@Model.Email" disabled />
                </div>

                <div class="mb-3">
                    <label class="form-label">Họ tên</label>
                    <input class="form-control" value="@Model.FullName" disabled />
                </div>

                <div class="mb-3">
                    <label asp-for="SelectedRole" class="form-label">Vai trò</label>
                    <select asp-for="SelectedRole" class="form-select" asp-items="@(new SelectList(Model.Roles))">
                        <option value="">-- Chọn vai trò --</option>
                    </select>
                    <span asp-validation-for="SelectedRole" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}