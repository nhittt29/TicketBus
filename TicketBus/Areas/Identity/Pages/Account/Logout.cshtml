@page
@model LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["Message"]
        </div>
    }
    <div class="row">
        <div class="col-md-6">
            @{
                if (User.Identity?.IsAuthenticated ?? false)
                {
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                        <p>Bạn có chắc chắn muốn đăng xuất?</p>
                        <button type="submit" class="btn btn-danger">Đăng xuất ngay</button>
                    </form>
                }
                else
                {
                    <p>Bạn đã đăng xuất.</p>
                    <a href="/Identity/Account/Login" class="btn btn-primary">Đăng nhập lại</a>
                }
            }
        </div>
    </div>
</div>